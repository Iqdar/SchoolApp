@model IEnumerable<SchoolApp.Models.Student>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (!Model.Any()) { 
    <h2>We donot have any student</h2>
}
else{ 
    <h2>Students</h2>

    <table id="myTable" class="table table-hover table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>FName</th>
                <th>Address</th>
                <th>Date of Birth</th>
                <th>Class</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var students in Model)
                {
            <tr>
                <td>@students.Id</td>
                <td>@students.Name</td>
                <td>@students.FName</td>
                <td>@students.Address</td>
                <td>@students.DateOfBirth</td>
                <td>@students.Stage.ClassStage + @students.Stage.Section</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "Student", new { id = students.Id }, null) |
                    @Html.ActionLink("Details", "Details", "Student", new { id = students.Id }, null)
                </td>
            </tr>
                }
        </tbody>
    </table>
}