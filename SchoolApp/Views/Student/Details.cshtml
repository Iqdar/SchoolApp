@model SchoolApp.Models.ViewModels.ResultViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2> 

<div class="row">
    <div class="col-md-6">
        <p><b>ID</b> @Model.Student2.Id</p>
    </div>
    <div class="col-md-6">
        <p><b>Name</b> @Model.Student2.Name</p>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <p><b>Father name</b> @Model.Student2.FName</p>
    </div>
    <div class="col-md-6">
        <p><b>Address</b> @Model.Student2.Address</p>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <p><b>Class</b> @Model.Student2.Stage.ClassStage  @Model.Student2.Stage.Section</p>
    </div>
    <div class="col-md-6">
        <p><b></b></p>
    </div>
</div>

@if (!Model.Result.Any())
{
    <h4>No rresults</h4>
}
else
{

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Class</th>
                <th>Term</th>
                <th>Percentage</th>
                <th>Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var results in Model.Result)
            {
                <tr>
                    <td>@results.Id</td>
                    <td>@results.Student.Name</td>
                    <td>@results.Stage.ClassStage + @results.Stage.Section</td>
                    <td>@results.Term</td>
                    <td>@results.Percentage</td>
                    <td>@results.Date</td>
                    <td></td>
                </tr>
            }
        </tbody>
    </table>
}