@model SchoolApp.Models.ViewModels.StageViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Class</h2>

<div class="row">
    <div class="col-md-6">
        <p><b>ID</b> @Model.Stage.Id</p>
    </div>
    <div class="col-md-6">
        <p><b>Class</b> @Model.Stage.ClassStage</p>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <p><b>Section</b> @Model.Stage.Section</p>
    </div>
    <div class="col-md-6">
        <p><b>Teacher</b> @Model.Stage.Teacher</p>
    </div>
</div>

@if (!Model.Student.Any())
{
    <h3>No Students in this class</h3>
}
else
{

    <table id="myTable" class="table table-hover table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>FName</th>
                <th>Address</th>
                <th>Date of Birth</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var students in Model.Student)
            {
                <tr>
                    <td>@students.Id</td>
                    <td>@students.Name</td>
                    <td>@students.FName</td>
                    <td>@students.Address</td>
                    <td>@students.DateOfBirth</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", "Student", new { id = students.Id }, null) |
                        @Html.ActionLink("Details", "Details", "Student", new { id = students.Id }, null)
                    </td>
                </tr>
            }
        </tbody>
    </table>

}